<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_account_report_pl_tree" model="ir.ui.view">
        <field name="model">report.pl</field>
        <field name="arch" type="xml">
            <tree string="Report P&amp;L Concepts" decoration-muted="active == False">
                <field name="sequence" widget="handle" />
                <field name="active" invisible="True" />
                <field name="concepts" />
            </tree>
        </field>
    </record>

    <record id="view_account_report_pl_form" model="ir.ui.view">
        <field name="model">report.pl</field>
        <field name="arch" type="xml">
            <form string="Type">
                <sheet>
                    <group>
                        <group>
                            <field name="concepts" required="1"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_account_report_pl_search" model="ir.ui.view">
        <field name="model">report.pl</field>
        <field name="arch" type="xml">
            <search string="Report P&amp;L Concepts">
                <field name="concepts" />
            </search>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_account_report_pl_view">
        <field name="name">Report P&amp;L Concepts</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">report.pl</field>
        <field name="view_mode">form,tree</field>
        <field name="view_id" ref="view_account_report_pl_tree"/>
        <field name="search_view_id" ref="view_account_report_pl_search"/>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">Click to set a new Report P&amp;L Concepts.</p>
        </field>
    </record>

    <menuitem id="menu_account_report_pl" parent="account.account_account_menu" sequence="25" action="action_account_report_pl_view"/>

</odoo>
